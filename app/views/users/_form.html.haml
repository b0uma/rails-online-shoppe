= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  %fieldset.form-group
    = f.label :name
    = f.text_field :name, class: "form-control"
  %fieldset.form-group
    = f.label :email
    = f.number_field :email, class: "form-control"
  %fieldset.form-group
    = f.label :password
    = f.password_field :password, class: "form-control"
  = f.submit 'Save'
