= form_for @user do |f|
  %fieldset.form-group
    = f.label :name
    = f.text_field :name, class: "form-control"
  %fieldset.form-group
    = f.label :email
    = f.text_field :email, class: "form-control"
  %fieldset.form-group
    = f.label :password
    = f.password_field :password, class: "form-control"
  %fieldset.form-group
    = f.label :password_confirm
    = f.password_field :password_confirm, class: "form-control"
  = f.submit 'Save'
